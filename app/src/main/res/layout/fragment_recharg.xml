<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_bg"
    tools:context="com.WinQoapp.earinmoney.wallet.RechargFragment">


    <RelativeLayout
        android:id="@+id/dailyRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.049">


        <androidx.cardview.widget.CardView
            android:id="@+id/dailycard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            android:layout_marginStart="20dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#74363C6A"
            app:cardCornerRadius="12dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/name_Et"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/radard"
                        android:hint="Account Holder Name"
                        android:padding="10dp"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/number_Et"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        android:background="@drawable/radard"
                        android:hint="Number"
                        android:textColor="@color/white" />


                </LinearLayout>


            </RelativeLayout>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/box"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:layout_marginLeft="50dp"


            android:layout_marginRight="50dp"

            android:backgroundTint="#313661"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Your Coins :"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/coins_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:drawableEnd="@drawable/money"
                android:drawablePadding="8dp"
                android:text="122"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>



    </RelativeLayout>







    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/dailyRelative">



        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Mobile Recharge 20"
        android:id="@+id/phone25"/>



    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Recharge 30 "
        android:textColor="@color/white"
        android:id="@+id/phone50"/>
        </RadioGroup>




        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"

            android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:drawableEnd="@drawable/money"
            android:drawablePadding="10dp"
            android:textSize="16dp"
            android:text="20,000"
            android:padding="10dp"
            android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:drawableEnd="@drawable/money"
                android:drawablePadding="10dp"
                android:textSize="16dp"
                android:padding="10dp"
                android:text="30,000"
                android:textStyle="bold"/>





</LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/submiBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="38dp"
        android:backgroundTint="#FFEB3B"
        android:minWidth="160dp"
        android:text="Phone Recharge"
        android:textColor="@color/black"
        android:textStyle="bold" />



</RelativeLayout>